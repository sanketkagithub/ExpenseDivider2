<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_take_give"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:padding="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_roomy_name_gt"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:inputType="textMultiLine"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/et_text" />

            <TextView
                android:id="@+id/tv_roomy_amount_gt"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="00"
                android:textColor="@color/black"
                android:textSize="@dimen/et_text" />


            <TextView
                android:id="@+id/tv_roomy_amount_variation"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="00"
                android:textColor="@color/black"
                android:textSize="@dimen/et_text" />

            <ImageView
                android:id="@+id/iv_roomy_variation"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/take"
                android:textColor="@color/white_color" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_payment_info"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:text="Manas will take 200â‚¹ "
                android:textAllCaps="false"
                android:textColor="@color/take"
                android:textSize="@dimen/et_text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <Button
                    android:id="@+id/but_call_roomy"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_ht"
                    android:layout_margin="2dp"
                    android:background="@drawable/buttons"
                    android:gravity="center"
                    android:text="@string/call"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/lv_text" />
            </RelativeLayout>



        </LinearLayout>




    </LinearLayout>
</LinearLayout>