<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.busyprojects.roomies.roomyActivities.AllRoomyActivity">



    <TextView
        android:background="@color/main_app_colorp"
        android:id="@+id/tv_roomy_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/history_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/title"
        android:fontFamily="serif"
        android:text="@string/roomies"
        android:textColor="@color/white_color" />


    <RelativeLayout
        android:layout_marginRight="@dimen/lr_margin_top_two_iv"
        android:layout_marginTop="@dimen/lr_margin_top_two_iv"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_notification"
        android:layout_width="@dimen/bell"
        android:layout_height="@dimen/bell"
        android:background="@drawable/total_roomy"
        android:layout_marginEnd="@dimen/lr_margin_top_two_iv">

        <TextView
            android:id="@+id/tv_total_roomy_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/white_color"
            android:textSize="@dimen/bell_text" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_below="@id/tv_roomy_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_all_roomy"
            android:dividerHeight="@dimen/lv_div_ht"
            android:divider="@color/lv_divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
        <ImageView
            android:id="@+id/iv_no_history_record_found"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/no_record"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/but_delete_all_roomy"
            android:layout_width="@dimen/delete_all_wid"
            android:layout_height="@dimen/delete_all_ht"
            android:fontFamily="serif"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/bottom_iv_margin"
            android:layout_marginLeft="@dimen/bottom_iv_margin"
            android:text="@string/delete_all"
            android:background="@drawable/buttons"
            android:gravity="center"
            android:textSize="@dimen/lv_text"
            android:layout_marginBottom="@dimen/bottom_iv_margin"
            android:onClick="showRoomyDeleteListAlert"
            android:textAllCaps="false"
            android:textColor="@color/white_color" />

    </RelativeLayout>

</RelativeLayout>
