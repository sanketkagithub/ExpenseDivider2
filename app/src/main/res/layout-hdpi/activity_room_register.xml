<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.busyprojects.roomies.roomyActivities.RoomRegistrationActivity">


    <RelativeLayout
        android:id="@+id/rel_iv_roomy_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/main_app_colorp"
        android:gravity="center">




        <TextView
            android:id="@+id/tv_log_reg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/title_login"
            android:fontFamily="serif"
            android:text="@string/room_registration"
            android:textColor="@color/white_color" />

    </RelativeLayout>


    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/house1"
        android:layout_marginLeft="@dimen/lr_mar_plate"
        android:layout_marginRight="@dimen/lr_mar_plate"
        android:layout_marginTop="@dimen/tb_mar_plate"
        android:layout_marginBottom="@dimen/tb_mar_plate"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/ll_et_wd"
            android:layout_height="@dimen/ll_et_ht"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="9dp">

                <EditText
                    android:id="@+id/et_reg_room_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:fontFamily="serif"
                    android:hint="@string/room_no"
                    android:textColor="@color/white_color"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/et_text" />


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:gravity="center">

        <Button
            android:layout_width="@dimen/but_w"
            android:layout_height="@dimen/button_ht"
            android:background="@drawable/buttons"
            android:fontFamily="serif"
            android:onClick="registerRoomNo"
            android:text="@string/register"
            android:textSize="@dimen/but_text"
            android:textAllCaps="false"
            android:textColor="@color/white_color" />

    </RelativeLayout>
</LinearLayout>
