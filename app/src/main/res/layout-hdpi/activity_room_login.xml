<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.busyprojects.roomies.roomyActivities.RoomLoginActivity">

    <RelativeLayout
        android:id="@+id/rel_iv_roomy_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/main_app_colorp"
        android:gravity="center">


        <RelativeLayout
            android:background="@drawable/home"
            android:layout_width="@dimen/room_no_login_iv_wh"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/room_no_login_iv_wh">


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_log_reg_title"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:gravity="center"
            android:textSize="@dimen/title_login"
            android:fontFamily="serif"
            android:text="@string/login"
            android:textColor="@color/white_color" />

    </RelativeLayout>



    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">




        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="@dimen/ll_et_wd"
            android:layout_height="@dimen/ll_et_ht"
            android:background="@drawable/et_reg_back"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/et_drawable_back"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:layout_width="@dimen/et_left_image"
                    android:layout_height="@dimen/et_left_image"
                    android:src="@drawable/call" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="9dp">

                <EditText
                    android:id="@+id/et_log_room_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Room No"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/et_text" />


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:gravity="center">

        <Button
            android:layout_width="@dimen/but_w"
            android:layout_height="@dimen/button_ht"
            android:background="@drawable/buttons"
            android:fontFamily="serif"
            android:onClick="roomLogin"
            android:text="Login"
            android:textSize="@dimen/but_text"
            android:textAllCaps="false"
            android:textColor="@color/white_color" />

    </RelativeLayout>

</LinearLayout>
