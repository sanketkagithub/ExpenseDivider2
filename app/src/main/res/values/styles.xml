<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="payment_calculated_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily" tools:ignore="NewApi">serif</item>

    </style>

  <style name="payment_calculated_text_value">
        <item name="android:textSize">@dimen/calculated_bottom_text</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily" tools:ignore="NewApi">serif</item>

    </style>


    <style name="list_style">

        <item name="android:scrollbarThumbVertical">@drawable/list_scroller</item>

    </style>

</resources>
