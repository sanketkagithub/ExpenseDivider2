<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_app_colorp"
    tools:context="com.busyprojects.roomies.LauncherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">


            <TextView
                android:id="@+id/tv_log_reg_title"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white_color"
                android:textSize="30sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.6">


            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/iv_centre_right"
                android:layout_marginBottom="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_toLeftOf="@+id/iv_centre_right"
                android:src="@drawable/roomy_launcher" />


            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/iv_centre_right"

                android:layout_marginBottom="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_toRightOf="@+id/iv_centre_right"
                android:src="@drawable/roomy_launcher" />


            <ImageView
                android:id="@+id/iv_03"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/iv_centre_right"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:src="@drawable/roomy_launcher" />

            <ImageView
                android:id="@+id/iv_centre_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/share_launcher" />

            <ImageView
                android:id="@+id/iv_centre_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/share_launcher" />

            <ImageView
                android:id="@+id/iv_centre_down"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/share_launcher" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
