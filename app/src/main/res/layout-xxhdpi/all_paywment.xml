<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:gravity="center">


        <RelativeLayout
            android:layout_weight="1.45"
            android:gravity="center"
            android:background="@color/white_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <Button
                android:gravity="center"
                android:id="@+id/but_delete_payment"
                android:layout_marginEnd="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/delete_payment"
                android:onClick="saveDeleteList"
                android:textAllCaps="false"
                android:layout_centerVertical="true"
                android:textColor="@color/white_color"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/white_color"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="@string/transactions"
                android:textColor="@color/main_app_colorp"
                android:textSize="15sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:background="@color/white_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_marginTop="4dp"
                android:id="@+id/lv_payments"
                android:layout_marginStart="@dimen/payment_lv_lr_margin"
                android:layout_marginEnd="@dimen/payment_lv_lr_margin"
                android:layout_marginLeft="@dimen/payment_lv_lr_margin"
                android:layout_marginRight="@dimen/payment_lv_lr_margin"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:dividerHeight="0dp"
                android:scrollbarSize="10dp"
                android:scrollbarThumbVertical="@drawable/list_scroller"
                android:divider="@null"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_no_payment_record_found"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/no_record"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="1.45"
            android:gravity="center"
            android:background="@color/white_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:fontFamily="serif"
            android:gravity="center"
            android:textSize="15sp" >




        <TextView
                android:id="@+id/tv_log_reg_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white_color"

                android:layout_centerInParent="true"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Each Paid"
                android:textColor="@color/main_app_colorp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/but_transfer_money"
                android:layout_marginEnd="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/transfer_payment"
                android:onClick="showAfterTransferPaymentTakeGiveList"
                android:textAllCaps="false"
                android:layout_centerVertical="true"
                android:textColor="@color/white_color"
                android:layout_marginRight="5dp" />


</RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_marginStart="@dimen/payment_lv_lr_margin"
                android:layout_marginEnd="@dimen/payment_lv_lr_margin"
                android:layout_marginLeft="@dimen/payment_lv_lr_margin"
                android:layout_marginRight="@dimen/payment_lv_lr_margin"
                android:id="@+id/lv_take_give"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scrollbarSize="10dp"
                android:scrollbarThumbVertical="@drawable/list_scroller"
                android:dividerHeight="0dp"
                android:divider="@null"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_no_transfer_record_found"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/no_record"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_divide_payment"
            android:layout_weight="1.3"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/but_divide"
                    android:layout_width="@dimen/but_w"
                    android:layout_height="@dimen/button_ht"
                    android:background="@drawable/buttons"
                    android:fontFamily="serif"
                    android:onClick="divideAmount"
                    android:text="Divide"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_tot_each_roomy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="@drawable/calculation_back"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/payment_calculated_text"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_total_amount"
                            style="@style/payment_calculated_text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00000/-"
                            android:textSize="12sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/payment_calculated_text"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Roomies "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_total_roomies"
                            style="@style/payment_calculated_text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/payment_calculated_text"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Each "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_each_payment"
                            style="@style/payment_calculated_text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00/-"
                            android:textSize="12sp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>




</RelativeLayout>