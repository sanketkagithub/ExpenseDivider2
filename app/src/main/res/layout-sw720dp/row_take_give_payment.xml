<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_take_give"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:padding="@dimen/lv_pad">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/paytg_ht_tablet"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_roomy_name_gt"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:text="Name"
                android:textSize="@dimen/lv_text"
                android:fontFamily="serif"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_roomy_amount_gt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="@dimen/lv_text"
                android:fontFamily="serif"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tv_roomy_amount_variation"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="00"
                android:fontFamily="serif"
                android:textSize="@dimen/lv_text"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_roomy_variation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lv_tg_iv"
                android:src="@drawable/take"
                android:textColor="@color/white_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:paddingLeft="15dp"
                android:fontFamily="serif"
                android:paddingRight="15dp"
                android:id="@+id/tv_payment_info"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="Manas will take 200â‚¹ "
                android:textAllCaps="false"
                android:textColor="@color/take" />


        </LinearLayout>






    </LinearLayout>
</LinearLayout>