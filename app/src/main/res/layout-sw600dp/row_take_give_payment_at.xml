<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_take_give"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:padding="@dimen/lv_pad">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/paytg_ht_tablet"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_roomy_name_gt"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:inputType="textMultiLine"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:text="Name"
                android:textSize="@dimen/lv_text"
                android:fontFamily="serif"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_roomy_amount_gt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="00"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/lv_text"
                android:fontFamily="serif"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tv_roomy_amount_variation"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="00"
                android:fontFamily="serif"
                android:textSize="@dimen/lv_text"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_roomy_variation"
                android:layout_width="@dimen/lv_tg_iv"
                android:layout_height="@dimen/lv_tg_iv"
                android:src="@drawable/take"
                android:textColor="@color/white_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:fontFamily="serif"
                android:id="@+id/tv_payment_info"
                android:layout_width="match_parent"
                android:textSize="@dimen/lv_text"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:gravity="center"
                android:text="Manas will take 200â‚¹ "
                android:textAllCaps="false"
                android:textColor="@color/take" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/paytg_ht_tablet"
            android:layout_marginTop="@dimen/tc_ll_top_mar"
            android:gravity="center"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/rel_but_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/but_transfer"
                    android:paddingLeft="@dimen/lr_padd_transfer_lv"
                    android:paddingRight="@dimen/lr_padd_transfer_lv"
                    android:layout_width="@dimen/but_wd"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttons"
                    android:gravity="center"
                    android:text="Transfer"
                    android:paddingTop="@dimen/t_15dp"
                    android:paddingBottom="@dimen/t_15dp"
                    android:textSize="@dimen/but_text"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:paddingEnd="@dimen/lr_padd_transfer_lv"
                    android:paddingStart="@dimen/lr_padd_transfer_lv" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/but_call_roomy"
                    android:layout_width="@dimen/but_wd"
                    android:layout_height="wrap_content"
                    android:text="@string/call"
                    android:textSize="@dimen/lv_text"
                    android:paddingTop="@dimen/t_15dp"
                    android:paddingBottom="@dimen/t_15dp"
                    android:fontFamily="serif"
                    android:textAllCaps="false"
                    android:background="@drawable/buttons"
                    android:textColor="@color/white_color" />

            </RelativeLayout>





        </LinearLayout>






    </LinearLayout>
</LinearLayout>