<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_take_give"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:padding="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tg_l_ht"
            android:layout_margin="@dimen/mar_tg_0"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_roomy_name_gt"
                android:layout_width="@dimen/lv_tg_name"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:inputType="textMultiLine"
                android:paddingLeft="@dimen/pl_tg_name"
                android:paddingStart="@dimen/pl_tg_name"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/lv_text" />

            <TextView
                android:id="@+id/tv_roomy_amount_gt"
                android:layout_width="@dimen/lv_tg_0"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="00"
                android:textColor="@color/black"
                android:textSize="@dimen/lv_text" />


            <TextView
                android:id="@+id/tv_roomy_amount_variation"
                android:layout_width="@dimen/lv_tg_1"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="00"
                android:textColor="@color/black"
                android:textSize="@dimen/lv_text" />

            <ImageView
                android:id="@+id/iv_roomy_variation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_tg_ht"
                android:src="@drawable/take"
                android:textColor="@color/white_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/but_transfer"
                android:layout_width="100dp"
                android:layout_height="19dp"
                android:layout_margin="2dp"
                android:background="@drawable/buttons"
                android:gravity="center"
                android:text="Transfer"
                android:textAllCaps="false"
                android:textColor="@color/white_color" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mar_tg_lv_mes"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_payment_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tv_tg_message_ht"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Manas will take 200â‚¹ "
                android:textAllCaps="false"
                android:textColor="@color/take"
                android:textSize="@dimen/lv_text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tg_l_ht"
            android:layout_margin="@dimen/mar_tg_call"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/but_call_roomy"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_ht"
                android:background="@drawable/buttons"
                android:fontFamily="serif"
                android:text="@string/call"
                android:textAllCaps="false"
                android:textColor="@color/white_color"
                android:textSize="@dimen/lv_text" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>