<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">



    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/whiite_del_back"
        android:layout_width="@dimen/del_alert_wd"
        android:layout_height="@dimen/del_alert_ht">

        <TextView
            android:id="@+id/tv_del_alert"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="@dimen/et_text"
            android:onClick="addRoomy"
            android:text="Are You sure to delete History Permenantly ?"
            android:textAllCaps="false"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_below="@+id/tv_del_alert"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/yn_top_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/del_but_ht"
                android:text="Yes"
                android:fontFamily="serif"
                android:textSize="@dimen/et_text"
                android:onClick="yesDeleteHistory"
                android:layout_marginRight="@dimen/yes_right_mr"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/yes_right_mr" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/del_but_ht"
                android:textSize="@dimen/et_text"
                android:fontFamily="serif"
                android:text="No"
                android:onClick="noDeleteHistory"
                android:textAllCaps="false"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>