<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="horizontal">


<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_sky_blue"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="selectedColor"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/sky_bluish"/>
     <ImageView
        android:id="@+id/iv_greenish"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="selectedColor"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/greenish"/>
     <ImageView
        android:id="@+id/iv_yellowish"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="selectedColor"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/yellowish"/>
     <ImageView
        android:id="@+id/iv_blackish"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="selectedColor"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/blackish"/>
     <ImageView
        android:id="@+id/iv_redish"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="selectedColor"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/redish"/>

 <ImageView
        android:id="@+id/iv_pinkish"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="selectedColor"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/pinkish"/>

<ImageView
        android:id="@+id/iv_voiletish"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="selectedColor"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/voiletish"/>


    </LinearLayout>

</HorizontalScrollView>

</LinearLayout>