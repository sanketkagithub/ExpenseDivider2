<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.busyprojects.roomies.roomyActivities.PaymentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.45"
            android:background="@color/grey_color"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ll_ht_paymnt_01"
                android:layout_centerInParent="true"
                android:fontFamily="serif"
                android:gravity="center">


                <TextView
                    android:id="@+id/tv_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="serif"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/bottom_iv_margin"
                    android:text="@string/transactions"
                    android:textColor="@color/main_app_colorp"
                    android:textSize="@dimen/but_text" />

                <Button
                    android:id="@+id/but_delete_payment"
                    android:layout_width="@dimen/lv_but_wd"
                    android:layout_height="@dimen/lv_but_ht"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/bottom_iv_margin"
                    android:textSize="@dimen/but_text"
                    android:layout_marginRight="@dimen/bottom_iv_margin"
                    android:text="@string/delete_all"
                    android:fontFamily="serif"
                    android:background="@drawable/buttons"
                    android:onClick="showSaveDeleteListAlert"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color" />


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white_color"
            android:gravity="center">

            <ListView
                android:id="@+id/lv_payments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/lv_divider"
                android:dividerHeight="@dimen/lv_div_ht"
                android:scrollbarSize="@dimen/scrollbar"
                android:scrollbarThumbVertical="@drawable/list_scroller" />

            <ImageView
                android:id="@+id/iv_no_payment_record_found"
                android:layout_width="@dimen/no_rec_lv"
                android:layout_height="@dimen/no_rec_lv"
                android:layout_centerInParent="true"
                android:src="@drawable/no_record"
                android:visibility="visible" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.45"
            android:background="@color/grey_color"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ll_ht_paymnt_01"
                android:layout_centerInParent="true"
                android:fontFamily="serif"
                android:gravity="center">


                <TextView
                    android:id="@+id/tv_each_paid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="serif"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/bottom_iv_margin"
                    android:text="@string/each_paid"
                    android:textColor="@color/main_app_colorp"
                    android:textSize="@dimen/but_text" />

                <Button
                    android:id="@+id/but_transfer_money"
                    android:layout_width="@dimen/lv_but_wd"
                    android:layout_height="@dimen/lv_but_ht"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/bottom_iv_margin"
                    android:textSize="@dimen/but_text"
                    android:layout_marginRight="@dimen/bottom_iv_margin"
                    android:text="@string/transfer"
                    android:fontFamily="serif"
                    android:background="@drawable/buttons"
                    android:onClick="saveAndShowAfterTransferPayTgList"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color" />


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white_color"
            android:gravity="center">

            <ListView
                android:id="@+id/lv_take_give"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/lv_divider"
                android:dividerHeight="@dimen/lv_div_ht"
                android:scrollbarSize="@dimen/scrollbar"
                android:scrollbarThumbVertical="@drawable/list_scroller" />

            <ImageView
                android:id="@+id/iv_no_transfer_record_found"
                android:layout_width="@dimen/no_rec_lv"
                android:layout_height="@dimen/no_rec_lv"
                android:layout_centerInParent="true"
                android:src="@drawable/no_record"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_divide_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_tot_each_roomy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/calculation_back"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/payment_calculated_text"
                            android:layout_width="@dimen/cal_bot_item_wd"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:fontFamily="serif"
                            android:textSize="@dimen/calculated_bottom_text" />

                        <TextView
                            android:id="@+id/tv_total_amount"
                            style="@style/payment_calculated_text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="00000₹"
                            android:textSize="@dimen/calculated_bottom_text" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/payment_calculated_text"
                            android:layout_width="@dimen/cal_bot_item_wd"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Roomies "
                            android:textSize="@dimen/calculated_bottom_text" />

                        <TextView
                            android:id="@+id/tv_total_roomies"
                            style="@style/payment_calculated_text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="00"
                            android:textSize="@dimen/calculated_bottom_text"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/payment_calculated_text"
                            android:layout_width="@dimen/cal_bot_item_wd"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Each "
                            android:textSize="@dimen/calculated_bottom_text" />

                        <TextView
                            android:id="@+id/tv_each_payment"
                            style="@style/payment_calculated_text_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="00₹"
                            android:textSize="@dimen/calculated_bottom_text" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
